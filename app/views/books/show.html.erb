<div class="container mt-3">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user_template', user:@user %>
      <%= render 'books/book_template', book:@book_new %>
    </div>
  <div class="col-md-8 offset-md-1">
    <h2>Book Detail</h2>
    <table class="table">
      <thead>
        <tr>
          <th>プロフィール画像</th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>写真</td>
          <td><%= attachment_image_tag @book.user, :profile_image, :fill, 100,100, format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= @book.body %></td>
          <td><%= link_to "Edit", edit_book_path(@book) %></td>
          <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        </tr>
      </tbody>
    </table>
  </div>