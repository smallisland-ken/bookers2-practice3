<div class="container mt-3">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user_template', user:@user %>
      <%= render 'books/book_template', book:@book %>
    </div>



  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table">
        <thead>
          <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          </thead>
        <tbody>
        <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= book.title %></td>
              <td><%= link_to "Show", book_path(book) %></td>
            </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>