<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user_template', user:@user %>
      <%= render 'books/book_template', book:@book %>
    </div>
    <div class="col-md8">
      <h2>User Book</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Profile image</th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @bookuser.each do |f| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 100,100, format: "jpeg", fallback: "no_image.jpg" %></td>
            <td><%= link_to f.title, book_path(f) %></td>
            <td><%= f.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>